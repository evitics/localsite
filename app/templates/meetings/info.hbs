{{#if writePerm}}
<form id="saveMeeting">
  <div class="row">
    <label>Meeting Name:
      <input type="text" id="meetingName" value="{{name}}" style="font-size:1.5em; height:2em;">
    </label>
  </div>
  <div class="row collapse">
    <label>Send Email when guest checks in?
    <select id="modify-sendEmailOnCheckin">
      <option value="false">Don't send any email</option>
      <option value="all">All Guests</option>
      <option value="new">Guests new to organization</option>
    </select>
  </div>
  <div class="row collapse modify-triggers" style="display:none;">
    <div class="row">
      <label>To:
        <input id="modify-email-to" type="text" value="{{emailTo}}">
      </label>
    </div>
    <div class="row">
      <label>From:
        <input id="modify-email-from" type="text" value="{{emailFrom}}" placeholder="gburdell3@gatech.edu">
      </label>
    </div>
    <div class="row">
      <label>Subject:
        <input id="modify-email-subject" type="text" value="{{emailSubject}}">
      </label>
    </div>
    <div class="row">
      <label>Message:
        <textarea id="modify-email-message" style="height:9rem;">{{emailMessage}}</textarea>
      </label>
    </div>
  </div>
  <div class="row">
    <input class="button save" type="submit" value="Save">
    <button class="delete">Delete</button>
  </div>
</form>

{{else}}
  <div data-alert class="alert-box alert">
    You do not have write permissions for this oganization.  Therefore you cannot not modify/delete this meeting.
  </div>
{{/if}}